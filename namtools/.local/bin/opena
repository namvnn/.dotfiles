#!/usr/bin/env bash

# Author: Nam Nguyen <nguyenvietnam2401@gmail.com>
# Description: Open a file, a directory or a URL with the default application across operating systems
# License: MIT License
# Date created: June 18, 2025
# Date modified: January 12, 2026

value="$1"

case "$(uname)" in
    Darwin)
        open "$value"
        ;;
    Linux)
        xdg-open "$value"
        ;;
    MINGW* | MSYS* | CYGWIN* | Windows_NT)
        start "" "$value"
        ;;
    *)
        echo "opena: unsupported OS"
        exit 1
        ;;
esac
