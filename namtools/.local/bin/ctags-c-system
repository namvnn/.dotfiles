#!/usr/bin/env bash

# Author: Nam Nguyen <nam@namn.me>
# Description: Generate a tags file (~/.tags/c-system) on system header files
# License: MIT License
# Date Created: January 25, 2026
# Date Modified: February 13, 2026

tags_dir="${HOME}/.tags"

mkdir -p "${tags_dir}"

find "${@}" \
    -type d -name 'include' \
    -print \
    -exec ctags -R --kinds-c=+p -o "${tags_dir}/c-system" {} '+'
